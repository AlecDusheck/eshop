{% extends "/admin/templates/page.twig" %}
{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add Category</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if data.errors is defined %}
                    {% for error in data.errors %}
                        <p class="alert alert-danger">{{ error }}</p>
                    {% endfor %}
                {% endif %}
                <form method="post">
                    <div class="form-group">
                        <label for="name">Category Name</label>
                        <input class="form-control" id="name" name="name" placeholder="Enter name">
                        <small id="help" class="form-text text-muted">The category will be displayed as this.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea">Description</label>
                        <textarea class="form-control" id="desc" name="desc" rows="3"></textarea>
                        <small id="help" class="form-text text-muted">This is displayed when the user 'Sorts by category'</small>
                    </div>
                    <fieldset class="form-group">
                        <legend>Options</legend>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" id="isHot" name="isHot" value="Yes" class="form-check-input">
                            Displayed as 'hot' category
                        </label>
                    </div>
                        <hr>
                    <button class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}