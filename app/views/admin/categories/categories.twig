{% extends "/admin/templates/page.twig" %}
{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categories</h1>
            </div>
        </div>
        {% if data.msgs is defined %}
            {% for msg in data.msgs %}
                <p class="alert alert-success">{{ msg }}</p>
            {% endfor %}
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading"> Categories
                <div class="pull-right">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                            Actions
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-right" role="menu">
                            <li><a href="../admin/categories/add">Add Category</a>
                            </li>
                            <li><a href="../admin/categories/remove">Remove Category</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    {% for category in data.categories.list %}
                        <a href="../admin/categories/edit?id={{ category.id }}" class="list-group-item">
                            {{ category.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}